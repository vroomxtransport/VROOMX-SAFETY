# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/trucking_compliance_hub

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for alerts)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@truckingcompliancehub.com

# FMCSA SAFER API (optional)
FMCSA_API_KEY=your-fmcsa-api-key
FMCSA_API_BASE_URL=https://mobile.fmcsa.dot.gov/qc/services
