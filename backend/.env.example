# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/trucking_compliance_hub

# JWT Configuration
# IMPORTANT: Generate a unique secret! Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_GENERATE_NEW_SECRET_MIN_64_CHARS
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000,http://localhost:5173

# Stripe Billing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# New pricing tier Stripe Price IDs (monthly)
STRIPE_OWNER_OPERATOR_MONTHLY_PRICE_ID=price_your-owner-operator-monthly-id
STRIPE_SMALL_FLEET_MONTHLY_PRICE_ID=price_your-small-fleet-monthly-id
STRIPE_FLEET_PRO_MONTHLY_PRICE_ID=price_your-fleet-pro-monthly-id

# Annual pricing (2 months free)
STRIPE_OWNER_OPERATOR_ANNUAL_PRICE_ID=price_your-owner-operator-annual-id
STRIPE_SMALL_FLEET_ANNUAL_PRICE_ID=price_your-small-fleet-annual-id
STRIPE_FLEET_PRO_ANNUAL_PRICE_ID=price_your-fleet-pro-annual-id

# Extra driver metered billing
STRIPE_SMALL_FLEET_EXTRA_DRIVER_PRICE_ID=price_your-small-fleet-extra-driver-id
STRIPE_FLEET_PRO_EXTRA_DRIVER_PRICE_ID=price_your-fleet-pro-extra-driver-id

# AI Integration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
OPENAI_API_KEY=sk-your-openai-api-key

# Email Configuration (Resend)
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=VroomX Safety <notifications@vroomxsafety.com>
EMAIL_REPLY_TO=support@vroomxsafety.com

# PostHog Analytics
POSTHOG_API_KEY=phc_your-posthog-project-api-key
POSTHOG_HOST=https://us.i.posthog.com

# =============================================================================
# FMCSA Data Sync Configuration
# =============================================================================
# These credentials are REQUIRED in production for automatic FMCSA data sync.
# In development, sync features will be disabled if not configured.

# SaferWebAPI - For inspection details and carrier profile data
# Get your API key at: https://saferweb.org (registration required)
# Used by: fmcsaSyncService for inspection details
SAFERWEB_API_KEY=your-saferweb-api-key

# Socrata DataHub API - For violation data from FMCSA public datasets
# Get your app token at: https://opendata.transportation.gov
# Rate limit: 1000 requests/hour with token, much lower without
# Used by: dataHubService for violation records
SOCRATA_APP_TOKEN=your-socrata-app-token

# FMCSA SAFER API (optional) - For carrier snapshot data
# Public API, key improves rate limits but not strictly required
# Get your key at: https://mobile.fmcsa.dot.gov/qc/services
FMCSA_API_KEY=your-fmcsa-api-key
FMCSA_API_BASE_URL=https://mobile.fmcsa.dot.gov/qc/services
